@model YeniGonderiViewModel

@{
	ViewData["Title"] = "Yeni Gönderi Ekle";
}

<h2>@ViewData["Title"]</h2>

<form method="post" enctype="multipart/form-data" asp-action="Yeni">
	<div class="mb-3">
		<label class="form-label" asp-for="Baslik"> Başlık </label>
		<input class="form-control" type="text" asp-for="Baslik">
		<span asp-validation-for="Baslik" class="text-danger mt-1"></span>
	</div>
	<div class="mb-3">
		<label class="form-label" asp-for="Resim"></label>
		<input class="form-control" type="file" asp-for="Resim">
		<span asp-validation-for="Resim" class="text-danger mt-1"></span>
	</div>
	<button class="btn btn-primary">EKLE</button>
</form>