@model Gonderi

@{
    ViewData["Title"] = "Düzenle Gönderi";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Duzenle" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Baslik" class="control-label"></label>
        <input asp-for="Baslik" class="form-control" />
        <span asp-validation-for="Baslik" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ResimYolu" class="control-label"></label>
        <input asp-for="ResimYolu" type="text" class="form-control" readonly />
        <span asp-validation-for="ResimYolu" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ResimYolu" class="control-label"></label>
        <input asp-for="ResimYolu" type="file" accept=".jpg, .jpeg, .png" class="form-control" />
        <span asp-validation-for="ResimYolu" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>